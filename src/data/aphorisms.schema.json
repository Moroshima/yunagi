{
  "$schema": "https://json-schema.org/draft-07/schema",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string"
    },
    "aphorisms": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "aphorism": {
            "type": "string"
          },
          "author": {
            "type": "string"
          },
          "lang": {
            "type": "string"
          },
          "source": {
            "type": "string"
          }
        },
        "additionalProperties": false,
        "required": ["aphorism", "author", "lang", "source"]
      }
    }
  },
  "additionalProperties": false,
  "required": ["$schema", "aphorisms"]
}
