{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["introduction", "links"],
  "properties": {
    "introduction": { "type": "string" },
    "links": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "link", "photo", "description"],
        "properties": {
          "name": { "type": "string" },
          "link": { "type": "string" },
          "photo": { "type": "string" },
          "description": { "type": "string" }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
